{{ 'section-specifications.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="py-20 bg-dark-accent section-{{ section.id }}-padding" id="specifications">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      {%- if section.settings.badge != blank -%}
        <div class="inline-block bg-accent/20 px-4 py-1 rounded-full text-accent text-sm font-medium mb-4">{{ section.settings.badge }}</div>
      {%- endif -%}
      
      {%- if section.settings.heading != blank -%}
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          {{ section.settings.heading | replace: 'Specifications', '<span class="text-accent">Specifications</span>' }}
        </h2>
      {%- endif -%}
      
      {%- if section.settings.description != blank -%}
        <p class="text-gray-400 max-w-2xl mx-auto">{{ section.settings.description }}</p>
      {%- endif -%}
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div class="flex justify-center">
        {%- if section.settings.image != blank -%}
          <img src="{{ section.settings.image | image_url: width: 600 }}" alt="{{ section.settings.image.alt | default: 'Titan Two Device' }}" class="max-w-md">
        {%- else -%}
          <img src="{{ 'titan-two-device.png' | asset_url }}" alt="Titan Two Device" class="max-w-md">
        {%- endif -%}
      </div>
      
      <div class="space-y-6">
        {%- for block in section.blocks -%}
          <div class="tech-spec-item bg-dark p-6 rounded-xl border border-gray-800" {{ block.shopify_attributes }}>
            <h3 class="text-xl font-semibold mb-2 flex items-center">
              <i class="{{ block.settings.icon }} text-accent mr-3"></i>
              {{ block.settings.title }}
            </h3>
            <p class="text-gray-400">{{ block.settings.description }}</p>
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Specifications Section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "badge",
      "label": "Badge Text",
      "default": "Technical Details"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Device Specifications"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "The TITAN TWO is engineered with cutting-edge technology to deliver unmatched performance and reliability."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Device Image"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 80
    }
  ],
  "blocks": [
    {
      "type": "spec",
      "name": "Specification",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon Class",
          "default": "fas fa-microchip",
          "info": "Font Awesome icon class"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Specification Title"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Specification description goes here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Specifications Section",
      "blocks": [
        {
          "type": "spec",
          "settings": {
            "icon": "fas fa-microchip",
            "title": "Processor",
            "description": "32-bit ARM Cortex-M4 CPU running at 168MHz with hardware floating point unit"
          }
        },
        {
          "type": "spec",
          "settings": {
            "icon": "fas fa-memory",
            "title": "Memory",
            "description": "192KB RAM, 1MB Flash Memory for firmware and scripts storage"
          }
        },
        {
          "type": "spec",
          "settings": {
            "icon": "fas fa-plug",
            "title": "Connectivity",
            "description": "2x USB 2.0 Type-A ports, 2x USB 2.0 Type-B ports, 1x Mini-USB programming port"
          }
        },
        {
          "type": "spec",
          "settings": {
            "icon": "fas fa-bolt",
            "title": "Power",
            "description": "USB powered (5V), no external power supply needed"
          }
        },
        {
          "type": "spec",
          "settings": {
            "icon": "fas fa-ruler",
            "title": "Dimensions",
            "description": "110mm x 55mm x 20mm (L x W x H)"
          }
        },
        {
          "type": "spec",
          "settings": {
            "icon": "fas fa-weight",
            "title": "Weight",
            "description": "85 grams"
          }
        }
      ]
    }
  ]
}
{% endschema %}
