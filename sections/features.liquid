{{ 'section-features.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="py-20 bg-dark section-{{ section.id }}-padding" id="features">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      {%- if section.settings.badge != blank -%}
        <div class="inline-block bg-accent/20 px-4 py-1 rounded-full text-accent text-sm font-medium mb-4">{{ section.settings.badge }}</div>
      {%- endif -%}
      
      {%- if section.settings.heading != blank -%}
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          {{ section.settings.heading | replace: 'Features', '<span class="text-accent">Features</span>' }}
        </h2>
      {%- endif -%}
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {%- for block in section.blocks -%}
        <div class="feature-card bg-dark-accent p-6 rounded-xl border border-gray-800" {{ block.shopify_attributes }}>
          {%- if block.settings.icon != blank -%}
            <div class="w-12 h-12 bg-accent/20 rounded-lg flex items-center justify-center mb-4">
              <i class="{{ block.settings.icon }} text-accent text-xl"></i>
            </div>
          {%- endif -%}
          
          {%- if block.settings.title != blank -%}
            <h3 class="text-xl font-semibold mb-3">{{ block.settings.title }}</h3>
          {%- endif -%}
          
          {%- if block.settings.description != blank -%}
            <p class="text-gray-400">{{ block.settings.description }}</p>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Features Section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "badge",
      "label": "Badge Text",
      "default": "Why Choose Titan Two"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Key Features"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 80
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon Class",
          "default": "fas fa-exchange-alt",
