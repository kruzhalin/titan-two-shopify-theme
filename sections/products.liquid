          "id": "product_description",
          "label": "Product Description"
        },
        {
          "type": "textarea",
          "id": "product_features",
          "label": "Product Features (comma separated)",
          "info": "Enter features separated by commas"
        },
        {
          "type": "url",
          "id": "product_link",
          "label": "Product Link"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Learn More"
        },
        {
          "type": "url",
          "id": "buy_link",
          "label": "Buy Link"
        },
        {
          "type": "text",
          "id": "buy_button_text",
          "label": "Buy Button Text",
          "default": "Buy Now"
